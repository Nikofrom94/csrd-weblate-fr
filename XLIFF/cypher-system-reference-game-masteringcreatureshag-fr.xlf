        <source>Question: Get an answer to a very simple, general question about a creature or place within 1 mile (1.5 km).</source>
        <target></target>
        <context-group name="" purpose="location">
          <context context-type="sourcefile"></context>
          <context context-type="linenumber">27</context>
        </context-group>
      </trans-unit>
      <trans-unit xml:space="preserve" id="12127cbdc6379bda" weblate-flags="md-text, safe-html, strict-same">
        <source>Scrying eye: View any familiar location within 1 mile as if they were observing it directly.</source>
        <target></target>
        <context-group name="" purpose="location">
          <context context-type="sourcefile"></context>
          <context context-type="linenumber">28</context>
        </context-group>
      </trans-unit>
