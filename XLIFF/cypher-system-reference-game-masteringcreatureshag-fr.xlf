        <source>Loot: In addition to coins and jewels, a hag usually has several scrolls or potions and may have an artifact.</source>
        <target></target>
        <context-group name="" purpose="location">
          <context context-type="sourcefile"></context>
          <context context-type="linenumber">37</context>
        </context-group>
